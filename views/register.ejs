<body>
    
    <section>
        <% if(typeof message !== 'undefined') {%>
            <p class="error" id="mensajeAlerta"><%= message %></p>
            <script src="/js/validaciones.js"></script>
        <% } %>
        <div class="contenedor">
            <div class="formulario">
                <form action="/registrar/v1/" method="POST">
                    <h2>Registrar</h2>

                    <div class="input-contenedor">
                        <i class="fa-regular fa-user"></i>
                        <input type="text" id="username" name="username" required>
                        <label for="username">Username</label>
                    </div>
                    <div class="input-contenedor">  
                        <i class="fa-regular fa-envelope"></i>
                        <input type="email" id="email" name="email" required>
                        <label for="email">Email</label>
                    </div>
                    <div class="input-contenedor">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" id="password" name="password" required>
                        <label for="password">Contraseña</label>
                    </div>
                    <div class="input-contenedor">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" id="verificarPassword" name="verificarPassword" required>
                        <label for="verificarPassword">Confirmar Password</label>
                    </div>
                    <div class="input-contenedor">
                        <i class="fa-solid fa-circle-user"></i>
                        <input type="text" id="nombres" name="nombres" required>
                        <label for="nombres">Nombre Completo</label>
                    </div>
                    <div class="input-contenedor">
                        <i class="fa-solid fa-circle-user"></i>
                        <input type="text" id="apellidos" name="apellidos" required>
                        <label for="apellidos">Apellido Completo</label>
                    </div>
                    <div class="input-contenedor">
                        <i class="fa-solid fa-phone"></i>
                        <input type="tel" id="telefono" name="telefono" required>
                        <label for="telefono">Telefono</label>
                    </div>
                    <!-- <div class="olvidar">
                        <label for="#">
                            <input type="checkbox"> Recordar 
                            <a href="#">Olvidé la contraseña</a>
                        </label>
                    </div> -->

                    <button>Crear Cuenta</button>
                </form> 

                <div>
                    <div class="registrar">
                        <p><a href="/login/v1/">Iniciar Sesión</a></p> 
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>